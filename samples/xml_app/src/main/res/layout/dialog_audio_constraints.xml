<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/audio_constraints_title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Echo Cancellation -->
    <CheckBox
        android:id="@+id/cbEchoCancellation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/echo_cancellation"
        android:paddingVertical="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/echo_cancellation_description"
        android:textSize="12sp"
        android:textColor="?android:attr/textColorSecondary"
        android:paddingStart="32dp"
        android:paddingEnd="0dp"
        android:layout_marginBottom="8dp" />

    <!-- Noise Suppression -->
    <CheckBox
        android:id="@+id/cbNoiseSuppression"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/noise_suppression"
        android:paddingVertical="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/noise_suppression_description"
        android:textSize="12sp"
        android:textColor="?android:attr/textColorSecondary"
        android:paddingStart="32dp"
        android:paddingEnd="0dp"
        android:layout_marginBottom="8dp" />

    <!-- Auto Gain Control -->
    <CheckBox
        android:id="@+id/cbAutoGainControl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/auto_gain_control"
        android:paddingVertical="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/auto_gain_control_description"
        android:textSize="12sp"
        android:textColor="?android:attr/textColorSecondary"
        android:paddingStart="32dp"
        android:paddingEnd="0dp"
        android:layout_marginBottom="16dp" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@android:string/cancel"
            android:layout_marginEnd="8dp"
            style="@style/Widget.Material3.Button.TextButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"
            style="@style/Widget.Material3.Button" />

    </LinearLayout>

</LinearLayout>
