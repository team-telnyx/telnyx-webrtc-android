<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="IconButton" parent="Widget.MaterialComponents.Button.Icon">
        <item name="shapeAppearanceOverlay">?attr/shapeAppearanceCornerExtraLarge</item>

        <!-- Adjust padding with insets -->

        <item name="strokeColor">@color/colorPrimary</item>

        <!-- Apply the smaller text appearance -->
    </style>

    <style name="TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="shapeAppearanceOverlay">@style/RoundedCornersShape</item>

        <!-- Adjust padding with insets -->
        <item name="android:insetTop">2dp</item>
        <item name="android:insetBottom">2dp</item>
        <item name="android:insetLeft">4dp</item>
        <item name="android:insetRight">4dp</item>
        <item name="android:textSize">12sp</item>

        <item name="strokeColor">@color/colorPrimary</item>

        <!-- Apply the smaller text appearance -->
    </style>

    <style name="IconControlButton" parent="Widget.Material3.Button.IconButton">
        <item name="shapeAppearanceOverlay">?attr/materialIconButtonStyle</item>

        <!-- Adjust padding with insets -->
        <item name="android:paddingHorizontal">16dp</item>



        <!-- Apply the smaller text appearance -->
    </style>

    <style name="AddProfileButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="shapeAppearanceOverlay">?attr/shapeAppearanceCornerExtraLarge</item>

        <item name="backgroundTint">@color/colorSecondary</item>


        <!-- Adjust padding with insets -->
        <item name="android:insetTop">2dp</item>
        <item name="android:insetBottom">2dp</item>
        <item name="android:insetLeft">4dp</item>
        <item name="android:insetRight">4dp</item>
        <item name="android:textSize">12sp</item>

        <item name="strokeColor">@color/colorPrimary</item>

        <!-- Apply the smaller text appearance -->
    </style>

    <style name="CustomPrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="android:insetTop">2dp</item>
        <item name="android:insetBottom">2dp</item>
        <item name="android:insetLeft">4dp</item>
        <item name="android:insetRight">4dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:height">32dp</item>
    </style>
    
    <style name="CustomToggleSwitch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="thumbTint">@color/white</item>
        <item name="trackTint">@color/colorPrimary</item>
    </style>
    
    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeColor">@color/colorPrimaryVariant</item>
        <item name="hintTextColor">@color/colorPrimaryVariant</item>
        <item name="android:textColorHint">@color/colorPrimaryVariant</item>
        <item name="endIconTint">@color/colorPrimaryVariant</item>
    </style>

    <style name="CustomOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.SmallComponent</item>

        <!-- Adjust padding with insets -->
        <item name="android:insetTop">2dp</item>
        <item name="android:insetBottom">2dp</item>
        <item name="android:insetLeft">4dp</item>
        <item name="android:insetRight">4dp</item>
        <item name="android:textSize">14sp</item>

        <item name="strokeColor">@color/colorPrimary</item>

        <!-- Apply the smaller text appearance -->
    </style>
    
    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>



    <!-- ####################################
          EditText
 ###################################### -->

    <style name="SubText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimaryVariant</item>
    </style>



    <style name="SubTextDeep">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/mainTextColor</item>
    </style>

    <style name="HeaderText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/mainTextColor</item>
    </style>


    <style name="HeaderTextLarge">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/mainTextColor</item>
    </style>

</resources>