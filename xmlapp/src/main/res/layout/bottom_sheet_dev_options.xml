<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/btnDevEnv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Development Environment" />

    <Button
        android:id="@+id/btnProdEnv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Production Environment" />

    <Button
        android:id="@+id/btnCopyFcm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Copy FCM Token" />

    <Button
        android:id="@+id/btnDisablePush"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Disable Push Notifications" />

</LinearLayout>