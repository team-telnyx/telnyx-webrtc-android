<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ####################################
                Button
       ###################################### -->
    <style name="button">
        <item name="android:paddingStart">@dimen/button_padding_start_end</item>
        <item name="android:paddingEnd">@dimen/button_padding_start_end</item>
        <item name="android:backgroundTint">@drawable/button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_button</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.08</item>
    </style>

    <style name="buttonPrimary" parent="button">
        <item name="android:backgroundTint">#31b886</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="buttonSecondary" parent="button">
        <item name="android:backgroundTint">#3498db</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyDarkToolbarStyle" parent="Theme.AppCompat.Light">
        <item name="android:colorBackground">@color/white</item>
        <item name="android:itemBackground">@color/white</item>
    </style>

    <!-- ####################################
            Splash Screen
    ###################################### -->
    <style name="SplashScreenTheme" parent = "Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
    </style>
</resources>