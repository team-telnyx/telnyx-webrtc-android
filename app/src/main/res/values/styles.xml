<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ####################################
                Button
       ###################################### -->
    <style name="TelnyxButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.08</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="TelnyxButton.Secondary" parent="TelnyxButton">
        <item name="android:backgroundTint">@color/colorSecondary</item>
    </style>

    <style name="TelnyxButton.Danger" parent="TelnyxButton">
        <item name="android:backgroundTint">@color/colorError</item>
    </style>

    <style name="TelnyxButton.Success" parent="TelnyxButton">
        <item name="android:backgroundTint">@color/colorSuccess</item>
    </style>

    <style name="MyDarkToolbarStyle" parent="Theme.AppCompat.Light">
        <item name="android:colorBackground">@color/white</item>
        <item name="android:itemBackground">@color/white</item>
    </style>

    <style name="CustomOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearanceOverlay">@style/RoundedCornersShape</item>

        <!-- Adjust padding with insets -->
        <item name="android:insetTop">2dp</item>
        <item name="android:insetBottom">2dp</item>
        <item name="android:insetLeft">4dp</item>
        <item name="android:insetRight">4dp</item>
        <item name="android:textSize">8sp</item>

        <item name="strokeColor">@color/colorPrimary</item>

        <!-- Apply the smaller text appearance -->
    </style>

    <style name="IconButton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton.Icon">

        <!-- Adjust padding with insets -->
        <item name="android:insetTop">2dp</item>
        <item name="android:insetBottom">2dp</item>
        <item name="android:insetLeft">4dp</item>
        <item name="android:insetRight">4dp</item>
        <item name="android:textSize">12sp</item>

        <item name="strokeColor">@color/colorPrimary</item>

        <!-- Apply the smaller text appearance -->
    </style>

    <style name="TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="shapeAppearanceOverlay">@style/RoundedCornersShape</item>

        <!-- Adjust padding with insets -->
        <item name="android:insetTop">2dp</item>
        <item name="android:insetBottom">2dp</item>
        <item name="android:insetLeft">4dp</item>
        <item name="android:insetRight">4dp</item>
        <item name="android:textSize">12sp</item>

        <item name="strokeColor">@color/colorPrimary</item>

        <!-- Apply the smaller text appearance -->
    </style>

    <style name="AddProfileButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="shapeAppearanceOverlay">@style/RoundedCornersShape</item>

        <item name="backgroundTint">@color/colorSecondary</item>


        <!-- Adjust padding with insets -->
        <item name="android:insetTop">2dp</item>
        <item name="android:insetBottom">2dp</item>
        <item name="android:insetLeft">4dp</item>
        <item name="android:insetRight">4dp</item>
        <item name="android:textSize">12sp</item>

        <item name="strokeColor">@color/colorPrimary</item>

        <!-- Apply the smaller text appearance -->
    </style>

    <style name="CustomPrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearanceOverlay">@style/RoundedCornersShape</item>
        <item name="android:insetTop">2dp</item>
        <item name="android:insetBottom">2dp</item>
        <item name="android:insetLeft">4dp</item>
        <item name="android:insetRight">4dp</item>

    </style>

    <style name="CustomButtonTextAppearance" parent="TextAppearance.MaterialComponents.Button">
        <!-- Set smaller text size -->
        <item name="android:textSize">8sp</item>
        <!-- Optional: Adjust letter spacing or line height -->
        <item name="android:letterSpacing">0.02</item>
        <item name="android:padding">5dp</item>

        <!-- Set text color -->
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- ####################################
                EditText
       ###################################### -->

    <style name="SubText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorPrimaryVariant</item>
    </style>



    <style name="SubTextDeep">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/mainTextColor</item>
    </style>

    <style name="HeaderText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/mainTextColor</item>
    </style>


    <style name="HeaderTextLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/mainTextColor</item>
    </style>

    <!-- ####################################
            Splash Screen
    ###################################### -->
    <style name="SplashScreenTheme" parent = "Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
    </style>
</resources>